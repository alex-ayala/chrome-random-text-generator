{
    "manifest_version": 2,
    "name": "My App",
    "version": "0.0.1",
    "browser_action": {
        "default_popup": "popup.html",
        "title" : "My app title"
    },
    "commands": {
        "toggle-feature-foo": {
            "suggested_key": {
                "default": "Ctrl+Shift+5"
            },
            "description": "Toggle feature foo",
            "global": true
        }
    },
    "background" : {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html"
}